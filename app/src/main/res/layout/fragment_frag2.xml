<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_background"
            android:id="@+id/lin"
            android:orientation="vertical"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icn2"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/josefinsans_med"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin"
            android:orientation="vertical"
            android:id="@+id/scroll"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/josefinsans_med"
                android:textStyle="normal"
                android:text="Welcome to our accessory shopping app! We strive to bring you the latest and trendiest accessories for your everyday needs. Our mission is to make shopping for accessories easy, fun, and convenient."
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us:"
                android:fontFamily="@font/josefinsans_med"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/contactus"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/emaildial"
                    android:textColor="@color/splash"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=" BlitzStore@gmail.com"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="Phone:"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/baseline_add_call_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/splash"
                android:gravity="center"
                android:id="@+id/phonedial"
                android:text=" +91-9820203538"
                /></LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Store"
        android:textSize="20sp"
        android:layout_below="@+id/scroll"
        android:fontFamily="@font/josefinsans_med"
        android:id="@+id/storee"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="50dp"
        android:layout_below="@+id/storee"
        android:layout_height="280dp"
        >
            <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            /></androidx.cardview.widget.CardView>

</RelativeLayout>