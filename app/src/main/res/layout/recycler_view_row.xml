<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15sp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/cardlayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout"
            >

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2sp"-->
<!--                android:layout_below="@+id/imageView"-->
<!--                android:background="@color/black"-->
<!--                />-->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100sp"
                android:layout_height="140sp"
                app:srcCompat="@drawable/car_holder"
                android:paddingTop="20sp"
                android:layout_marginRight="7dp"
                android:paddingBottom="20sp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:text="Ambrane Car Mobile Holder with Adjustable Side Arm for Smartphones, Mobile Holder Mount for Dashboard 360° Rotational, Strong Suction Cup, Compatible with 4 to 7-inch Devices (Grip Stand)"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rate"
                android:layout_toRightOf="@+id/imageView"
                android:text="4.7 ★"
                android:layout_below="@+id/textView"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_marginLeft="15sp"
                android:text="MRP: ₹700" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹800"
                android:background="@drawable/strike_through"
                android:layout_below="@+id/rate"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/imageView"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
